set $base0D #97bbf7
set $base0E #c0b7f9
set $base0F #fcc09e

hide_edge_borders both

# custom bindings
bindsym $mod+shift+x exec ~/.lock/lock.sh ~/.lock/lock.png
bindsym $mod+z exec "/home/colin/dotfiles/scripts/power.sh"

# screenshots
bindsym Print exec screen.sh root
bindsym $mod+Print exec screen.sh active

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# # Sreen brightness controls
bindsym XF86MonBrightnessUp   exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# needs i3-gaps for this to work
gaps inner 10
gaps outer 10

exec mate-terminal
exec firefox
exec spotify

#exec --no-startup-id xautolock -time 30 -detectsleep -locker '/home/colin/.lock/lock.sh /home/colin/.lock/lock.png"

# gives roffi some transparency
exec --no-startup-id compton
exec --no-startup-id slack
exec --no-startup-id tlp start
exec_always --no-startup-id display-visor -i -l LID -f -0 eDP1 -1 HDMI2
exec_always --no-startup-id ~/bin/xmodmap_reload.py
exec_always --no-startup-id "/home/colin/bin/polybar.sh"
exec_always feh --bg-scale /home/colin/install/files/space.png  # set a wallpaper
exec_always --no-startup-id "xrdb -merge ~/.Xresources"

# Cycle wallpapers and apply new colorscheme.
bindsym $mod+p exec "wal -i $HOME/Pictures/Wallpapers -o wal-set"


